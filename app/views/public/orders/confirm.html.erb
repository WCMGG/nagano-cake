<h2>注文情報確認</h2>

 <% billing_amount = 0 %>
 <% current_customer.cart_items.each do |cart_item| %>
  <tr>
  <th>商品名</th>
  <td><%= cart_item.item.name %></td>
  <th>単価（税込</th>
  <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
  <th>数量</th>
  <td><%= cart_item.amount %></td>
  <th>小計</th>
  <td><%= cart_item.subtotal %></td>
  </tr>
  <% billing_amount += cart_item.item.add_tax_price * cart_item.amount  %>
 <% end %>

 <tr>
  <th>送料</th>
  <% @order.shipping_cost = 800 %>
  <td><%= @order.shipping_cost %></td>

  <th>商品合計</th>
  <td><%= billing_amount.to_s(:delimited) %></td>


  <th>請求金額</th>
  <td><%= billing_amount + 800 %></td>
 </tr>

<p><strong>支払方法</strong>
<%= @order.payment_method_i18n %>
<p>

<strong>お届け先</strong>
〒<%= @order.postal_code %>　【住所】<%= @order.address %>　【宛名】<%= @order.receiver_name %>
</p>

 <%= form_with(model: @order,url:orders_path, method: :post, local: true) do |f| %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :receiver_name, :value => @order.receiver_name %>
  <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
  <%= f.hidden_field :billing_amount, :value => @order.billing_amount %>
  <%= f.submit "注文を確定する", class:"btn btn-primary col-xs-12" %>
 <% end %>