<h3>注文情報詳細</h3>
    <h6>注文情報</h6>
    <table>
        <tr>
            <td>注文日</td>
            <td><%= @order.created_at %></td>
        </tr>
        <tr>
            <td>配送先</td>
            <td>
                <%= @order.postal_code %>
                <%= @order.address %>
                <%= @order.receiver_name %>
            </td>
        </tr>
        <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
            <td>ステータス</td>
            <td><%= @order.order_status %></td>
        </tr>
    </table>
    <h6>請求情報</h6>
    <table>
        <tr>
            <td>商品合計</td>
            <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>
        <tr>
            <td>請求情報</td>
            <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
            <td>ご請求額</td>
            <td><%= (@order.billing_amount + 800).to_s(:delimited) %></td>
        </tr>
    </table>
    <h6>注文内容</h6>
    <table>
        <thead>
            <tr>
                <th>商品</th>
                <th>単価</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @order_details.each do |order_detail| %>
                <tr>
                    <td><%= order_detail.item.name %></td>
                    <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
                    <td><%= order_detail.item_amount %></td>
                    <td><%= order_detail.subtotal.to_s(:delimited) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>