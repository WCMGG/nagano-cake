<div class="container my-5">
  <h3><strong>配送先編集</strong></h3>
      <%= form_with model:@address, url:address_path(@address), method: :patch, local:true do |f| %>
    <div class="row">
      <label class="col-lg-3">郵便番号(ハイフン無し)</label>
        <%= f.text_field :postal_code, class: "col-xs-3" %>
    </div><br>

    <div class="row">
      <label class="col-lg-3">住所</label>
        <%= f.text_field :address, class: "col-sm-6" %>
    </div><br>

    <div class="row">
      <label class="col-lg-3">宛名</label>
      <%= f.text_field :recelver_name, class: "col-xs-3 mr-3" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success ml-3" %>
      <% end %>
    </div>
</div>