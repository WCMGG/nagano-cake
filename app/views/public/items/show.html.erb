<div class="container my-5">
  <div class="col-md-12">
    <%= attachment_image_tag @item, :image, size: "300x260" %>
      <tr>
        <th class="col-md-2"><%= @item.name %></th>
        <th class="col-md-2"><%= @item.introduction %></th>
        <th class="col-md-2">¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</th>
      <% if customer_signed_in? %>
        <td>
        <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
      　<%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 20 %></td>
        <td class="col-md-2"><%= f.submit 'カートに入れる', class: "btn-sm btn-success" %></td>
        <% end %>
      </tr>
      <% end %>
  </div>
</div>