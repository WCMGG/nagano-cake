<div class="container my-5">
 <div class="row">
  <h3 class="">商品一覧
   <small class="text-muted">
    (全<%= @quantity %>件)
   </small>
  </h3>
 </div>
  <div class="d-flex flex-wrap">
   <% @items.each do |item| %>
    <div>
     <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image, size: "200x150" %>
     <% end %>
    </div>
    <div>
     <%= item.name %>
    </div>
    <div>
     ¥<%= item.add_tax_price.to_s(:delimited) %>
    </div>
   <% end %>
  </div>
  <%= paginate @items %>
</div>

