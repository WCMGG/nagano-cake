<div class="container my-4" >
  <div class="row">
    <div class="col-xl-12">
      <h3><strong>注文履歴詳細</strong></h3>
        
        <tr>
         <th>購入者<th> <td><%= link_to admin_customer_data_path(@order.customer) do %><%= @customer.last_name %><%= @customer.first_name %><% end %></td>
        <br>
         <th>注文日<th> <td></td>
        <br>
         <th>配送先<th> <td>〒<%= @order.postal_code %>　【住所】<%= @order.address %>　【宛名】<%= @order.receiver_name %></td>
        <br>
         <th>支払方法<th> <td><%= @order.payment_method_i18n %></td>
        <br>
         <th>注文ステータス</th>
          <td>
          <%= form_with model: order, url: admin_order_path(order), class:"update_status" do |f| %>
          <%= f.select :status, Order.statuses.keys %>
          <%= f.submit "更新", class:'btn btn-info' %>
          <% end %>
          </td>
       </tr>
        
      <table class="table table-bordered">
        <thead>
          <tr class="table-info">
            <th class="col-md-4">商品名</th>
            <th class="col-md-2">単価（税込）</th>
            <th class="col-md-2">数量</th>
            <th class="col-md-2">小計</th>
            <th class="col-md-2">制作ステータス</th>
          </tr>
        </thead>
        <% @total = 0 %> 
        <tbody>
          <% @cart_items.each do |cart_item| %> %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total += cart_item.subtotal %>
            
            <th>制作ステータス</th> 
 　　　　　　　　　　<%= form_with model: order_detail, url: admin_order_detail_path, method: :patch, local: true do |f| %>
 　　　　　　　　　　<td><%= f.select :making_status, OrderedDetail.making_statuses.keys, class: "making_status-select" %></td>
 　　　　　　　　　　<td><%= f.submit "更新", class: "btn btn-outline-success" %></td>
 　　　　　　　　　　<% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="col-md-2"><strong>合計金額</strong></td>　<td class="col-md-2"><%= @total %>円</td>
            <td class="col-md-2"><strong>送料</strong></td> <% @order.shipping_cost = 800 %> <td class="col-md-2"><%= @order.shipping_cost %>円</td>
            <td class="col-md-2"><strong>請求金額合計</strong></td>　<td class="col-md-2"><%= @order.billing_amount %> <%= @total %> + <%= @order.shipping_cost = 800 %></td>
          </tr>
        </tbody>
      </table>
      
    </div>
  </div>
</div>