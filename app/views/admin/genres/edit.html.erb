<div class="container">
  <h2 class="mt-3">ジャンル編集</h2>
  <div class="row">
    <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
      <div class="form-group">
        <%= f.label:ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

