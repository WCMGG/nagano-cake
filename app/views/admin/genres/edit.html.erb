<div class="container my-4">
  <h3>ジャンル編集</h3>
  <div class="col-ld-6">
    <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
      <div class="form-group">
        <%= f.label:ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

