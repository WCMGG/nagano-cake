<div class="container my-4">
  <h3>ジャンルの一覧・追加</h3>
  <br>
  <div class="row ml-1">
    <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <%= f.label:ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
    <% end %>
  </div><br>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tr>
          <th class="bg-light">ジャンル</th>
        </tr>
          <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="col-md-3"><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
        </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>

