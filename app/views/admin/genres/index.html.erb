<div class="container">
  <h2 class="mt-3">ジャンルの一覧・追加</h2>
  <div class="row">
    <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label:ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

